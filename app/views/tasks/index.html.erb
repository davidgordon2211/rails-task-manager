<div class="container text-center">
<% @tasks.each do |task| %>
<div class="card">
<%= link_to task_path(task) do %>
    <h1><%= task.title %></h1>
  <% end %>
  <p><%= task.details %></p>
  <% if task.completed %>
    <p>Task complete</p>
  <% end %>
</div>
<% end %>
<%= link_to "Create a new task", tasks_new_path, class: 'btn btn-primary' %>
</div>
