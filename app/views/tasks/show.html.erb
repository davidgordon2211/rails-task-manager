<div class="container">
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
  <% if @task.completed %>
    <p>Task complete</p>
  <% end %>
  <%= link_to "Back to tasks", tasks_path, class:"btn btn-primary" %>
  <%= link_to "Edit Tasks", edit_path, class:"btn btn-info" %>
<%= link_to "Delete Task", task_path(@task), method: :delete, class:"btn btn-danger" %>
</div>

